<h2>Edit this Book</h2>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Title of the Book</label>
    <div class="col-sm-10">
      {{input type="text" value=model.title class="form-control" placeholder="The name of the Book"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">URL of the Book</label>
    <div class="col-sm-10">
      {{input type="text" value=model.image class="form-control" placeholder="Change URL for image"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Condition of the Book</label>
    <div class="col-sm-10">
      {{input type="text" value=model.condition class="form-control" placeholder="Condtion of the Book"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Status</label>
    <div class="col-sm-10">
      <select class="form-control" value="{{model.isAvailable}}" >
        <option value=true>Available</option>
        <option value=false>Not Available</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveBook' model}}>Save Changes</button>
      {{delete-book model=model}}
    </div>
  </div>
</div>
