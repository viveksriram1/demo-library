<h2>Edit this Book</h2>

<div class="form-horizontal">
  <img src="{{model.book.image}}" height="100" width="80">
  <div class="form-group">
    <label class="col-sm-2 control-label">Title of the Book</label>
    <div class="col-sm-10">
      <label class="col-sm-2 control-label">{{model.book.title}}</label>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Condition of the Book</label>
    <div class="col-sm-10">
      <label class="col-sm-2 control-label">{{model.book.condition}}</label>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Person</label>
    <div class="col-md-4">
      model.person_name
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    {{#paper-button onClick=(route-action 'addPersonToBook' model) raised= true}}Issue this book to this person{{/paper-button}}
    </div>
  </div>
</div>
