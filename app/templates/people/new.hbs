<h2>Add a new Book</h2>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name of the Person</label>
    <div class="col-sm-10">
      {{input type="text" required=true value=model.name class="form-control" placeholder="The name of the Person"}}
      {{#if error}}
        <p>{{error}}</p>
      {{/if}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      {{input type="text" required=true value=model.email class="form-control" placeholder="Email"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Phone Number</label>
    <div class="col-sm-10">
      {{input type="text" required=true value=model.phone class="form-control" placeholder="Phone Number"}}
    </div>
  </div>
  <div class="layout-row">
    <div class="col-sm-offset-2 col-sm-10">
      {{!-- {{#paper-button raised=true}}<button type="submit" class="" {{action 'saveBook' model}}>Add this Books list</button>{{/paper-button}} --}}
      {{#paper-button raised= true onClick=(route-action "savePerson" model)}}Add this person to library{{/paper-button}}
    </div>
  </div>
</div>
